<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="100dp">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/main_recipe_image_recipes_list"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:maxHeight="80dp"
        android:maxWidth="80dp"
        android:src="@drawable/recipe_book"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recipe1"
        android:id="@+id/recipe_name_recipes_list"
        android:layout_alignTop="@+id/main_recipe_image_recipes_list"
        android:layout_toRightOf="@+id/main_recipe_image_recipes_list"
        android:layout_toEndOf="@+id/main_recipe_image_recipes_list"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="ingredient1, ingredient2, ingredient3, ingredient4, ingredient5, ingredient6"
        android:id="@+id/recipe_ingredients_recipes_list"
        android:layout_below="@+id/recipe_name_recipes_list"
        android:layout_toRightOf="@+id/main_recipe_image_recipes_list"
        android:layout_toEndOf="@+id/main_recipe_image_recipes_list"
        android:maxLines="2" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView3"
        android:src="@drawable/clock"
        android:alpha="0.5"
        android:layout_alignBottom="@+id/main_recipe_image_recipes_list"
        android:layout_toRightOf="@+id/main_recipe_image_recipes_list"
        android:layout_toEndOf="@+id/main_recipe_image_recipes_list" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="22 ч. 30 мин. "
        android:id="@+id/recipe_time_recipes_list"
        android:layout_alignTop="@+id/imageView3"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="4dp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView4"
        android:src="@drawable/poll"
        android:alpha="0.5"
        android:layout_alignTop="@+id/imageView3"
        android:layout_toRightOf="@+id/recipe_time_recipes_list"
        android:layout_toEndOf="@+id/recipe_time_recipes_list"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="4.3"
        android:id="@+id/recipe_rating_recipes_list"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4"
        android:layout_marginLeft="5dp" />

</RelativeLayout>