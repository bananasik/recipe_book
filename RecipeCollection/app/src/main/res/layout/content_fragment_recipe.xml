<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/recipeF_main_imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/nophoto" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Large Text ооо тртр гртрт рри ргр григр рри арраи риарип раирпи врирвиа аипнаип вианван  пвпини "
        android:id="@+id/recipeF_recipe_name_textView"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/recipeF_main_imageView"
        android:layout_toEndOf="@+id/recipeF_main_imageView"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:maxLines="4"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView5"
        android:layout_below="@+id/recipeF_recipe_name_textView"
        android:layout_alignLeft="@+id/recipeF_recipe_name_textView"
        android:layout_alignStart="@+id/recipeF_recipe_name_textView"
        android:src="@drawable/clock"
        android:alpha="0.5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="1 ч. 25 мин."
        android:id="@+id/recipeF_time_textView"
        android:layout_below="@+id/recipeF_recipe_name_textView"
        android:layout_toRightOf="@+id/imageView5"
        android:layout_toEndOf="@+id/imageView5"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="1dp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView6"
        android:layout_below="@+id/recipeF_recipe_name_textView"
        android:layout_toRightOf="@+id/recipeF_time_textView"
        android:layout_toEndOf="@+id/recipeF_time_textView"
        android:layout_marginLeft="5dp"
        android:src="@drawable/poll"
        android:alpha="0.5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="4.7"
        android:id="@+id/recipeF_rating_textView"
        android:layout_alignTop="@+id/recipeF_time_textView"
        android:layout_toRightOf="@+id/imageView6"
        android:layout_toEndOf="@+id/imageView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ингредиенты:"
        android:id="@+id/textView5"
        android:layout_below="@+id/recipeF_main_imageView"
        android:layout_alignLeft="@+id/recipeF_main_imageView"
        android:layout_alignStart="@+id/recipeF_main_imageView"
        android:layout_marginTop="26dp"
        android:textColor="@color/colorPrimary" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recipeF_ingredients_listView"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:nestedScrollingEnabled="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Описание:"
        android:id="@+id/textView6"
        android:layout_below="@+id/recipeF_ingredients_listView"
        android:layout_alignLeft="@+id/recipeF_ingredients_listView"
        android:layout_alignStart="@+id/recipeF_ingredients_listView"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Духовку нагрейте до 175°С. Противень застелите фольгой. Куриные грудки и бедрышко с обеих сторон смажьте оливковым маслом, солью и молотым перцем. Отправьте в духовку на 30 минут выпекаться.

Кастрюлю для супа поставьте на средний огонь и нагрейте в ней 1 столовую ложку оливкового масла. Обжарьте лук, чеснок, мелко натертые морковь и сельдей. Забросьте тимьян и лавровый лист.

Готовьте, помешивая около 6 минут, пока овощи не станут мягкими, но они не должны поджариться.

Курицу достаньте из духовки и разделите на волокна. Кожу и кости выбросьте. Влейте в кастрюлю бульон и воду. Доведите все до кипения. Забросьте курицу и рис, оставьте вариться на 30 минут на маленьком огне.

Перед подачей выжмите сок лимона. Подавайте горячим.

Приятного аппетита!"
        android:id="@+id/recipeF_description_textView"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />
</RelativeLayout>